
<a href="{{ path('uvs_view', {'name': notif.firstEntity.uv.name|slugify, 'slug': notif.firstEntity.uv.slug}) }}"
   class="notif{% if notif.isSuper %} super-notif{% elseif notif.isNew(app.user.lastVisitHome) %} notif-new{% endif %}">
    <img src="{{ asset('assets/img/icons-big/uv.png') }}" />

    <h4 class="notif-title">
        {{ 'uvs.notifs.newReview'|trans({
            '%uv%': highlight_notif_data(notif.firstEntity.uv.name),
            '%user%': highlight_notif_data(notif.firstEntity.sender.fullName)
        })|raw }}
    </h4>

    <div class="notif-date">
        {{ time_diff(notif.date)|ucfirst }}
    </div>

    <div class="clear"></div>
</a>
