{% extends '::page-2cols.html.twig' %}

{% block title %}{{ 'user.orga.index.title'|trans }}{% endblock %}

{% block main_menu_link_homepage %} active{% endblock %}

{% block titleIcon %}
    <img src="{{ asset('assets/img/titles/orga.png') }}" alt="{{ 'base.logo.alt'|trans }}" title="{{ 'base.logo.title'|trans }}" class="page-title-icon" />
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/bundles/user.js') }}" type="text/javascript"></script>
{% endblock %}

{% block content %}
    <div class="padding20-all">
        {# Avatar form #}
        <div style="display: none;">
            {{ form_start(avatarForm) }}
            {{ form_widget(avatarForm) }}
            {{ form_end(avatarForm) }}
            <iframe id="avatar-upload-frame" name="avatar-upload-frame" src="#"></iframe>
        </div>

        <div class="row-fluid">
            <div class="span2 offset4">
                <a href="#" id="avatar-upload-link" title="{{ 'user.orga.avatar.title'|trans }}">
                    <div class="profileEdit-avatar-actions">
                        <i class="icon-pencil"></i>
                    </div>
                        <img src="{{ asset('uploads/logos/'~app.user.logo) }}?{{ rand }}" alt="{{ app.user.fullName }}" title="{{ app.user.fullName }}" />
                </a>
            </div>
            <div class="span6 profileEdit-fixedValue">
                <p>
                    <strong>{{ app.user.name }}</strong>
                    <br />
                    <small class="muted">
                        <em>
                            {{ app.user.login }}
                        </em>
                    </small>
                <br/>
                {% if app.user.contactPhone %}
                    {{ app.user.contactPhone }}<br/>
                {% endif %}
                {% if app.user.contactMail %}
                    <a href="mailto:{{ app.user.contactMail }}">{{ app.user.contactMail }}</a>
                {% endif %}
                </p>
            </div>
        </div>

        <hr/>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
